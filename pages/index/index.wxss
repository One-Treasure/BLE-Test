/* 全局样式 */
page {
    background-color: #f8f8f8;
}

/* 个人信息模块样式 */
.data {
    width: 694rpx;
    height: 188rpx;
    background: #FFFFFF;
    opacity: 1;
    border-radius: 30rpx;
    margin: 28rpx;
    display: flex;
}

/* 个人信息左侧区域样式 */
.data-left {
    width: 134rpx;
    height: 100%;
}

/* 用户头像样式 */
.data-left-avatar {
    position: absolute;
    width: 118rpx;
    height: 118rpx;
    background: #FFFFFF;
    border: 2rpx solid #fff;
    border-radius: 50%;
    opacity: 1;
    margin: 36rpx 0 34rpx 16rpx;
    overflow:hidden;
    display: block;
}

/* 个人信息中间区域样式 */
.data-center{
    width: 494rpx;
    height: 100%;
}

/* 用户昵称样式 */
.data-center-username {
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: 500;
    line-height: 40rpx;
    color: #333333;
    opacity: 1;
    margin-top: 52rpx;
    margin-left: 16rpx;
}

/* 用户设备序列号样式 */
.data-center-code {
    height: 34rpx;
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 400;
    line-height: 34rpx;
    color: #777777;
    opacity: 1;
    margin-top: 16rpx;
    margin-left: 16rpx;
}

/* 个人信息右侧区域样式 */
.data-right {
    width: 92rpx;
    height: 100%;
}

/* 设置icon区域样式 */
.data-right-set {
    width: 50rpx;
    height: 50rpx;
    margin: 70rpx 16rpx 68rpx 26rpx;
}

/* 设置icon区域图片样式 */
.data-right-set image {
    width: 50rpx;
    height: 50rpx;
}

/* 天气情况区域样式 */
.weather {
    width: 694rpx;
    height: 270rpx;
    background: #FFFFFF;
    box-shadow: 0rpx 6rpx 12rpx rgba(255, 148, 148, 0.06);
    opacity: 1;
    border-radius: 30rpx;
    margin: 0 28rpx 0 28rpx;
    display: flex;
}

