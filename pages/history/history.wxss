/* 图表分析区域样式 */
.chart {
    width: 100%;
    height: 1420rpx;
    background: #FFFFFF;
    opacity: 1;
}

/* 图表区域标题样式 */
.chart-title {
    width: 140rpx;
    height: 44rpx;
    opacity: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: 16rpx;
    padding-left: 28rpx;
}

/* 图表区域标题文字样式 */
.chart-title-text {
    font-size: 32rpx;
    font-family: PingFang SC;
    font-weight: 500;
    line-height: 44rpx;
    color: #333333;
}

/* 图表区域标题右边框样式 */
.chart-title-border {
    width: 8rpx;
    height: 32rpx;
    background: #FF75A0;
    opacity: 1;
    border-radius: 4rpx;
    margin-left: 4rpx;
}

/* 折线图区域样式 */
.chart-line {
    width: 694rpx;
    height: 490rpx;
    margin: 0 auto;
    border: 1px solid #dde1e3;
    box-sizing: border-box;
    background: rgba(255, 117, 160, 0.11);
    opacity: 1;
    border-radius: 15px;
    margin-top: 32rpx;
    margin-left: 28rpx;
}

/* 折线图时间选择区域样式 */
.chart-line-date {
    width: 350rpx;
    height: 44rpx;
    margin-top: 16rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    position: relative;
}

/* 时间未选择样式 */
.chart-line-date-time {
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 400;
    line-height: 34rpx;
    color: #777777;
    opacity: 1;
    margin-left: 20rpx;
}

/* 时间选中样式 */
.active {
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: 400;
    line-height: 40rpx;
    color: #333333;
    opacity: 1;
}

/* 下划线 */
.chart-line-date-time-border {
    width: 90rpx;
    height: 4rpx;
    background-color: #FF75A0;
    opacity: 1;
    border-radius: 4rpx;
    position: absolute;
    bottom: 0;
    transition: all .3s linear;
}

/* 折线图长宽 */
#column-dom {
    width: 100%;
    height: 100%;
}

/* 环形图区域样式 */
.chart-circle {
    width: 694rpx;
    height: 462rpx;
    background: #FFFFFF;
    box-shadow: 0px 6rpx 12rpx rgba(51, 51, 51, 0.08);
    opacity: 1;
    border-radius: 30rpx;
    margin-top: 42rpx;
    margin-left: 28rpx;
}