/* 皮肤分析用户历史分析记录单个区域图片样式 */
.history-item-face {
    width: 158rpx;
    height: 158rpx;
    background: #FFFFFF;
    /* border: 2rpx solid #707070; */
    border-radius: 50%;
    opacity: 1;
    margin-top: 18rpx;
    margin-left: 18rpx;
}

/* 皮肤分析用户历史分析记录单个区域图片样式 */
.history-item-face image {
    width: 158rpx;
    height: 158rpx;
    border-radius: 50%;
}

/* 皮肤分析用户历史分析记录单个区域日期样式 */
.history-item-date {
    width: 110rpx;
    height: 28rpx;
    background: #FF75A0;
    opacity: 1;
    border-radius: 16rpx;
    font-size: 20rpx;
    font-family: DIN;
    font-weight: 500;
    line-height: 24rpx;
    color: #FFFFFF;
    opacity: 1;
    margin-top: 8rpx;
    margin-left: 18rpx;
    text-align: center;
}

/* 皮肤分析用户历史分析记录单个区域状态样式 */
.history-item-state {
    height: 46rpx;
    display: flex;
    margin-top: 8rpx;
    margin-left: 22rpx;
}

/* 皮肤分析用户历史分析记录单个区域状态标题样式 */
.history-item-state-title {
    font-size: 18rpx;
    font-family: PingFang SC;
    font-weight: 400;
    line-height: 26rpx;
    color: #777777;
    opacity: 1;
    margin-top: 8rpx;
}

/* 皮肤分析用户历史分析记录单个区域状态分数样式 */
.history-item-state-num {
    font-size: 28rpx;
    font-family: DIN;
    font-weight: 500;
    line-height: 34rpx;
    color: #FF75A0;
    opacity: 1;
}

/* 皮肤分析用户历史分析记录单个区域状态单位样式 */
.history-item-state-unit {
    font-size: 18rpx;
    font-family: PingFang SC;
    font-weight: 500;
    line-height: 26rpx;
    color: #FF75A0;
    opacity: 1;
    margin-top: 8rpx;
}

