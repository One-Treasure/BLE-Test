/* 全局样式 */
page {
    background-color: #f8f8f8;
    padding-bottom: 28rpx;
}

/* 日历组件显示区域样式 */
.calendar {
    width: 100%;
    height: 538rpx;
    background: #FFFFFF;
    opacity: 1;
    margin: 16rpx 0;
    padding-top: 20rpx;
}

/* 极点日历插件自定义标题样式 */
.header {
    font-size: 34rpx;
    font-family: PingFang SC;
    font-weight: bold;
    line-height: 48rpx;
    color: #06121E;
    opacity: 1;
}

/* 皮肤分析用户历史分析记录区域样式 */
.history {
    width: 100%;
    height: 350rpx;
    margin-top: 28rpx;
    white-space: nowrap;
}

/* 皮肤分析用户历史分析记录单个区域样式 */
.history-item {
    width: 194rpx;
    height: 272rpx;
    background: #FFFFFF;
    box-shadow: 0px 4rpx 12rpx rgba(180, 21, 54, 0.19);
    opacity: 1;
    border-radius: 24rpx;
    margin-top: 30rpx;
    margin-left: 42rpx;
    display: inline-block;
}

/* 指定轮播图区域的高度 */
swiper {
    height: 350rpx;
}

